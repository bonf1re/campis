<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="campis.dp1.controllers.MainViewController">
   <top>
      <Label prefHeight="43.0" prefWidth="524.0" text="Lista de Vehículos" BorderPane.alignment="TOP_LEFT">
         <BorderPane.margin>
            <Insets left="20.0" top="20.0" />
         </BorderPane.margin>
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </top>
   <center>
      <TableView fx:id="tableVehicle" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="500.0" prefWidth="1203.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="idVehicleColumn" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="maxWeightColumn" prefWidth="75.0" text="Peso máximo" />
            <TableColumn fx:id="maxSpeedColumn" prefWidth="75.0" text="Velocidad máxima" />
            <TableColumn fx:id="activeColumn" prefWidth="75.0" text="Activo" />
            <TableColumn fx:id="warehouseColumn" prefWidth="75.0" text="Almacén" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="10.0" left="20.0" right="10.0" top="20.0" />
         </BorderPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <right>
      <Button fx:id="addVehicleButton" mnemonicParsing="false" onAction="#goCreateVehicle" prefHeight="20.0" prefWidth="26.0" text="+" BorderPane.alignment="TOP_RIGHT">
         <BorderPane.margin>
            <Insets right="10.0" top="10.0" />
         </BorderPane.margin>
      </Button>
   </right>
   <bottom>
      <Button fx:id="okButton" mnemonicParsing="false" text="Aceptar" BorderPane.alignment="TOP_CENTER">
         <BorderPane.margin>
            <Insets bottom="100.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
