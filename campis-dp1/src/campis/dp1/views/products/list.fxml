<BorderPane prefHeight="500.0" prefWidth="967.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="campis.dp1.controllers.products.ListController">
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <center>
      <TableView fx:id="tablaProd" prefHeight="335.0" prefWidth="737.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="itemCol" prefWidth="75.0" text="Item" />
          <TableColumn fx:id="nomCol" prefWidth="75.0" text="Nombre" />
            <TableColumn fx:id="tipoCol" prefWidth="75.0" text="Tipo" />
            <TableColumn fx:id="pesoCol" prefWidth="75.0" text="Peso" />
            <TableColumn fx:id="medidaCol" prefWidth="75.0" text="Unidad de Medida" />
            <TableColumn fx:id="pStockCol" prefWidth="75.0" text="Stock Físico" />
            <TableColumn fx:id="cStockCol" prefWidth="75.0" text="Stock Lógico" />
            <TableColumn prefWidth="75.0" text="Acciones" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets bottom="10.0" left="20.0" right="10.0" top="20.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="44.0" prefWidth="967.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Lista de Productos">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" top="20.0" />
               </HBox.margin>
            </Label>
            <Label text="Nombre :">
               <font>
                  <Font size="13.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" top="70.0" />
               </HBox.margin>
            </Label>
            <JFXTextField fx:id="searchField">
               <HBox.margin>
                  <Insets left="30.0" top="60.0" />
               </HBox.margin>
            </JFXTextField>
            <Button mnemonicParsing="false" onAction="#searchButtonAction" text="Buscar">
               <HBox.margin>
                  <Insets left="50.0" top="60.0" />
               </HBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </top>
   <right>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button layoutX="58.0" layoutY="101.0" mnemonicParsing="false" onAction="#goCreateProduct" prefHeight="35.0" prefWidth="85.0" text="Nuevo" />
            <Button layoutX="58.0" layoutY="161.0" mnemonicParsing="false" onAction="#goEditProduct" prefHeight="35.0" prefWidth="85.0" text="Editar" />
            <Button layoutX="58.0" layoutY="224.0" mnemonicParsing="false" onAction="#deleteProduct" prefHeight="35.0" prefWidth="85.0" text="Eliminar" />
            <Button layoutX="58.0" layoutY="38.0" mnemonicParsing="false" onAction="#goViewProduct" prefHeight="35.0" prefWidth="85.0" text="Visualizar" />
         </children>
      </AnchorPane>
   </right>
</BorderPane>
